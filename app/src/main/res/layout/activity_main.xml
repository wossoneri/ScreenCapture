<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softard.wow.screencapture.MainActivity">

    <Button
        android:id="@+id/btn_capture"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Capture Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Record Screen"
        app:layout_constraintEnd_toEndOf="@+id/btn_capture"
        app:layout_constraintStart_toStartOf="@+id/btn_capture"
        app:layout_constraintTop_toBottomOf="@+id/btn_capture" />

    <Button
        android:id="@+id/btn_record_codec"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Record By Codec"
        app:layout_constraintEnd_toEndOf="@+id/btn_record"
        app:layout_constraintStart_toStartOf="@+id/btn_record"
        app:layout_constraintTop_toBottomOf="@+id/btn_record" />

    <Button
        android:id="@+id/btn_record_camera"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Record Camera"
        app:layout_constraintEnd_toEndOf="@+id/btn_record_codec"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_record_codec"
        app:layout_constraintTop_toBottomOf="@+id/btn_record_codec" />

    <Button
        android:id="@+id/btn_scan_qr"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Scan QR code"
        app:layout_constraintEnd_toEndOf="@+id/btn_record_camera"
        app:layout_constraintStart_toStartOf="@+id/btn_record_camera"
        app:layout_constraintTop_toBottomOf="@+id/btn_record_camera" />

    <Button
        android:id="@+id/btn_rtsp_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Play Rtsp"
        app:layout_constraintEnd_toEndOf="@+id/btn_scan_qr"
        app:layout_constraintStart_toStartOf="@+id/btn_scan_qr"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_qr" />

    <Button
        android:id="@+id/btn_socket_test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Socket Test"
        app:layout_constraintEnd_toEndOf="@+id/btn_rtsp_player"
        app:layout_constraintStart_toStartOf="@+id/btn_rtsp_player"
        app:layout_constraintTop_toBottomOf="@+id/btn_rtsp_player" />

</androidx.constraintlayout.widget.ConstraintLayout>
